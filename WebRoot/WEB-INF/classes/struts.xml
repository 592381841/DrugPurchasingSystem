<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
    </package>
    
    
    <!-- 监管机构 -->
    <package name="healthBureau" namespace="/healthBureau" extends="default"> 
    
    
    </package>
    
    <!-- 医疗机构 -->
<package name="hosptial" namespace="/hospital" extends="default"> 
		<!-- 不跳转页面 -->
    <action name="null_*" class="com.demo.action.hospital.HospitalAction" method="{1}"></action>
    <!-- 页面跳转 -->
    <action name="jump_*" class="com.demo.action.hospital.HospitalAction" method="{1}">
    <result name="forword">
    /hospital/{1}.jsp
    </result>
    
    </action>
    </package>
    
    <!-- 公有 -->
  <package name="common" namespace="/common" extends="default">
  
  		<!-- 验证码图片生成-->
	<action name="vertifyImage" class="com.common.action.UserAction"
		method="getImage">
		<result name="success" type="stream">
			<param name="contentType">image/jpeg</param>
			<param name="inputName">imageStream</param>
			<param name="bufferSize">1024</param>
		</result>
	</action>


		<!-- 判断验证码是否正确-->
	<action name="verificationCode" class="com.common.action.UserAction" method="verificationCode">
		
	</action>
	<!-- 登录 -->
	<action name="login" class="com.common.action.UserAction" method="login">
		<result name="success1" type="redirect">
		/hospital/index.jsp
		
		</result>
		
		<result name="success2" type="redirect">
		/healthBureau/index.jsp
		
		</result>
		<result name="fail" type="redirect">
		/login.jsp
		</result>
		
	
	</action>
<!-- 注销 -->
<action name="logout" class="com.common.action.UserAction" method="logout" >
<result name="success" type="redirect">
/login.jsp
</result>
</action>
<!-- 建议反馈 -->
</package>

    <!-- Add packages here -->

</struts>
